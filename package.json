{
  "name": "appointment-vault",
  "version": "1.0.0",
  "description": "A beginner-friendly appointment logging web app built with Express, EJS, and SQLite.",
  "main": "src/app.js",
  "scripts": {
    "dev": "node src/app.js",
    "dev:ensure": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/ensure.ps1",
    "dev:nodemon": "nodemon src/app.js",
    "start": "node src/app.js",
    "up": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/up.ps1",
    "ensure": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/ensure.ps1",
    "open": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/open.ps1",
    "down": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/down.ps1",
    "status": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/status.ps1",
    "guard:start": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/watchdog-start.ps1",
    "guard:status": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/watchdog-status.ps1",
    "guard:stop": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/watchdog-stop.ps1",
    "autoheal:install": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/autoheal-install.ps1",
    "autoheal:status": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/autoheal-status.ps1",
    "autoheal:remove": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/autoheal-remove.ps1",
    "stable:start": "set \"PM2_HOME=.pm2\"&& npx pm2 start ecosystem.config.cjs --only appointment-vault",
    "stable:restart": "set \"PM2_HOME=.pm2\"&& npx pm2 restart appointment-vault",
    "stable:stop": "set \"PM2_HOME=.pm2\"&& npx pm2 stop appointment-vault",
    "stable:delete": "set \"PM2_HOME=.pm2\"&& npx pm2 delete appointment-vault",
    "stable:status": "set \"PM2_HOME=.pm2\"&& npx pm2 status appointment-vault",
    "stable:logs": "set \"PM2_HOME=.pm2\"&& npx pm2 logs appointment-vault --lines 100",
    "stable:save": "set \"PM2_HOME=.pm2\"&& npx pm2 save"
  },
  "keywords": [
    "appointments",
    "express",
    "ejs",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "dotenv": "^17.3.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.19.0",
    "googleapis": "^171.4.0",
    "node-cron": "^4.2.1",
    "twilio": "^5.12.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pm2": "^6.0.14"
  }
}
